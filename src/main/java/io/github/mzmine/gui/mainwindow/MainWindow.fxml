<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import org.dockfx.DockPane?>
<?import org.dockfx.DockNode?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="io.github.mzmine.gui.mainwindow.MainWindowController">
	<stylesheets>
		<URL value="@MainWindow.css" />
	</stylesheets>
	<center>
		<DockPane fx:id="mainDockPane">
			<children>
				<TreeView fx:id="rawDataTree" prefHeight="120">
					<contextMenu>
						<ContextMenu>
							<items>
								<MenuItem text="Show TIC" onAction="#handleShowTIC" />
								<MenuItem text="Export" />
								<MenuItem text="Report" />
								<MenuItem text="Remove" onAction="#removeRawData" />
							</items>
						</ContextMenu>
					</contextMenu>
				</TreeView>
				<TreeView fx:id="featureTree" prefHeight="120">
					<contextMenu>
						<ContextMenu>
							<items>
								<MenuItem text="Remove" onAction="#removeFeatureTable" />
							</items>
						</ContextMenu>
					</contextMenu>
				</TreeView>
				<TaskProgressView fx:id="tasksView" prefHeight="120" />
			</children>
		</DockPane>
	</center>
	<bottom>
		<StatusBar fx:id="statusBar" minHeight="30" maxHeight="30">
			<rightItems>
				<StackPane minWidth="1" minHeight="1" scaleShape="true">
					<ProgressBar fx:id="memoryBar" maxWidth="1000" opacity="0.3" />
					<Label fx:id="memoryBarLabel" maxWidth="1000" onMouseClicked="#memoryBarClicked">
						<tooltip>
							<Tooltip text="Free/total memory available for the application" />
						</tooltip>
					</Label>
				</StackPane>
			</rightItems>
		</StatusBar>
	</bottom>
</BorderPane>
